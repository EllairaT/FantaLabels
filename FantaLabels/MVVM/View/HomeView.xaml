<UserControl x:Class="FantaLabels.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FantaLabels.MVVM.View"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="345"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create Label"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left"
                  Foreground="Black"
                  FontSize="20"
                  Margin="20,0,0,0" Height="30" Width="131"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10,10,10,10">
            <!-- Project/part Name -->
            <TextBlock Text="Project/Part Name:"/>
            <TextBox Width="Auto" MinWidth="150" Height="25" Margin="0,0,0,20"/>

            <!-- Owner -->
            <TextBlock Text="Owner:"/>
            <TextBox Width="Auto" MinWidth="150" Height="25" Margin="0,0,0,20"/>

            <!-- Grid for DatePickers -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- Entry Date -->
                    <ColumnDefinition Width="15"/>
                    <!-- Spacer -->
                    <ColumnDefinition Width="*" />
                    <!-- Expiration Date -->
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="Entry Date:"/>
                    <DatePicker Width="150"/>
                    <!-- Checkbox to select today's date -->
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Name="todayCheck" Margin="0,0,5,0"/>
                        <TextBlock Text="Today"/>
                    </StackPanel>
                    
                </StackPanel>

                <StackPanel Orientation="Vertical" Grid.Column="2">
                    <TextBlock Text="Expiration Date:"/>
                    <DatePicker Width="150"/>
                </StackPanel>
            </Grid>

            <!-- Purpose -->
            <TextBlock Text="Purpose:"/>
            <TextBox AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Width="Auto" Height="70" TextWrapping="Wrap" Margin="0,0,0,20"/>
        </StackPanel>
    </Grid>

</UserControl>