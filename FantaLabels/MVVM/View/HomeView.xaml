<UserControl x:Class="FantaLabels.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FantaLabels.MVVM.View"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Print Label"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Left"
                  Foreground="Black"
                  FontSize="28"
                  Margin="20,0,0,0"/>

        <StackPanel Grid.Row="1">
            <Label Content="Project/Part Name"
                   Foreground="White"
                   Target="{Binding ElementName=txtProj}"/>
            <TextBox Text="TextBox" 
                     Height="25"
                     Name="txtProj"/>


            <Label Content="Owner"
                   Foreground="White"
                   Target="txtOwner"/>
            <TextBox TextWrapping="Wrap" 
                     Text="TextBox" 
                     Height="25"
                     Name="txtOwner"/>
            
            
            <Label Content="Entry Date"
                   Foreground="White"/>
            <DatePicker />

            <Label Content="Expiration Date"
                   Foreground="White"/>
            <DatePicker/>

            <Label Content="Purpose"
                    Foreground="White"
                    Target="txtPurpose"/>
            
            <TextBox TextWrapping="Wrap" 
              Text="TextBox" 
              Height="50"
              Name="txtPurpose"/>



        </StackPanel>

    </Grid>

</UserControl>
