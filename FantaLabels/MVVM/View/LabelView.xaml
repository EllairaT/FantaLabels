<UserControl x:Class="FantaLabels.MVVM.View.LabelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FantaLabels.MVVM.View" xmlns:viewmodel="clr-namespace:FantaLabels.MVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:LabelViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="330" Background="White" BorderThickness="5,5,5,5" ClipToBounds="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="192*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5,5,5,5">
            <TextBlock Text="Product/Part Name:"/>
            <TextBlock Text="Blahblahblah234ddasra" FontSize="26"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5,5,5,5" >
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Owner:"/>
                <TextBlock Text="Blahblahblah" FontSize="18"/>
            </StackPanel>


        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5,5,5,5">
            <!-- Grid for Dates -->
            <Grid Margin="0,0,0,20" Width="319">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- Entry Date -->
                    <ColumnDefinition Width="15"/>
                    <!-- Spacer -->
                    <ColumnDefinition Width="*" />
                    <!-- Expiration Date -->
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="Entry Date:"/>
                    <TextBlock Text="Blah"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Grid.Column="2">
                    <TextBlock Text="Expiration Date:"/>
                    <TextBlock Text="Blah"/>

                </StackPanel>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5,5,5,5">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Purpose:"/>
                <TextBlock Text="Blahblahblaasdasdxcwsawh" FontSize="16" Width="170" Height="115" HorizontalAlignment="Left" TextWrapping="Wrap"/>
            </StackPanel>
            <Image Source="{Binding QrCodeImage}"
                   Height="100" 
                   Width="100"  
                   HorizontalAlignment="Right"
                   Margin="30,0,0,0"/>

        </StackPanel>
    </Grid>
</UserControl>
