<Window x:Class="FantaLabels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:FantaLabels.MVVM.ViewModel"
        xmlns:local="clr-namespace:FantaLabels" xmlns:view="clr-namespace:FantaLabels.MVVM.View"
        mc:Ignorable="d"
        Title="FantaLabel"
        WindowStyle="SingleBorderWindow"
        Height="600" 
        Width="900"
        ResizeMode="NoResize">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:LabelViewModel}">
            <view:LabelView/>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#FFC5C5C5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="435"/>
                <ColumnDefinition Width="416*"/>
                <ColumnDefinition Width="49*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="443*"/>
                <RowDefinition Height="66*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Create Label"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="Black"
                       FontSize="22"
                       Margin="20,0,0,0" Height="29" Width="134"/>

            <!--#region DATA ENTRY -->
            <StackPanel Grid.Row="1" 
                        Orientation="Vertical" 
                        Margin="10,10,10,10">
                <!-- Project/part Name -->
                <TextBlock Text="Product/Part Name:"/>
                <TextBox Width="Auto" 
                         MinWidth="150" 
                         Height="25" 
                         Margin="0,0,0,20"
                         Text="{Binding LabelVM.Label.Name}"/>

                <!-- Owner -->
                <TextBlock Text="Owner:"/>
                <TextBox Width="Auto" 
                         MinWidth="150" 
                         Height="25" 
                         Margin="0,0,0,20"
                         Text="{Binding LabelVM.Label.Owner}"/>

                <!-- Grid for DatePickers -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Entry Date -->
                        <ColumnDefinition Width="15"/>
                        <!-- Spacer -->
                        <ColumnDefinition Width="*" />
                        <!-- Expiration Date -->
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <TextBlock Text="Entry Date:"/>
                        <DatePicker Width="150" 
                                    HorizontalAlignment="Left"
                                    SelectedDate="{Binding LabelVM.Label.EntryDate}"/>

                    </StackPanel>

                    <StackPanel Orientation="Vertical" Grid.Column="2">
                        <TextBlock Text="Expiration Date:"/>
                        <DatePicker Width="150" 
                                    HorizontalAlignment="Left"
                                    SelectedDate="{Binding LabelVM.Label.ExpiryDate}"/>
                    </StackPanel>
                </Grid>

                <!-- Purpose -->
                <TextBlock Text="Purpose:"/>
                <TextBox AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto" 
                         Width="Auto" 
                         Height="127" 
                         TextWrapping="Wrap"
                         Text="{Binding LabelVM.Label.Purpose}"/>

                <Button Height="50"
                        Margin="0,20,0,0"
                        Content="Generate Label QR Code" 
                        Command="{Binding FinalizeLabelCommand}"/>
            </StackPanel>
            <!--#endregion-->

            <!--#region LABEL PREVIEW -->
            <!--<StackPanel Grid.Column="1"
                        Grid.Row="1"
                        Orientation="Vertical" 
                        Margin="10,10,10,10">
              
            </StackPanel>-->
            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Width="100">

                <Button Height="50" 
                        Width="100" 
                        Content="Print"
                        Command="{Binding FinalizeLabelCommand}"/>
            </StackPanel>
            <StackPanel Grid.Row="1"           
                        Grid.RowSpan="2"
                        Grid.Column="1"               
                        HorizontalAlignment="Center">
                <ContentControl Content="{Binding LabelVM}"/>
            </StackPanel>
            <!--#endregion-->
        </Grid>
    </Border>
</Window>
