<Window x:Class="FantaLabels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:FantaLabels.MVVM.ViewModel"
        xmlns:local="clr-namespace:FantaLabels"
        mc:Ignorable="d"
        Title="FantaLabel"
        WindowStyle="SingleBorderWindow"
        Height="600" 
        Width="920"
        ResizeMode="NoResize"
        Background="Transparent">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#FFC5C5C5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="435"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="388*"/>
                <RowDefinition Height="121*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Create Label"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="Black"
                       FontSize="22"
                       Margin="20,0,0,0" Height="29" Width="134"/>

            <!--#region DATA ENTRY -->
            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10,10,10,10">
                <!-- Project/part Name -->
                <TextBlock Text="Project/Part Name:"/>
                <TextBox Width="Auto" MinWidth="150" Height="25" Margin="0,0,0,20"/>

                <!-- Owner -->
                <TextBlock Text="Owner:"/>
                <TextBox Width="Auto" MinWidth="150" Height="25" Margin="0,0,0,20"/>

                <!-- Grid for DatePickers -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Entry Date -->
                        <ColumnDefinition Width="15"/>
                        <!-- Spacer -->
                        <ColumnDefinition Width="*" />
                        <!-- Expiration Date -->
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <TextBlock Text="Entry Date:"/>
                        <DatePicker Width="150" HorizontalAlignment="Left"/>
                        <!-- Checkbox to select today's date -->
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <CheckBox Name="todayCheck" Margin="0,0,5,0"/>
                            <TextBlock Text="Today"/>
                        </StackPanel>

                    </StackPanel>

                    <StackPanel Orientation="Vertical" Grid.Column="2">
                        <TextBlock Text="Expiration Date:"/>
                        <DatePicker Width="150" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>

                <!-- Purpose -->
                <TextBlock Text="Purpose:"/>
                <TextBox AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto" 
                         Width="Auto" Height="127" 
                         TextWrapping="Wrap"/>
            </StackPanel>
            <!--#endregion-->

            <!--#region LABEL PREVIEW -->
            <!--<StackPanel Grid.Column="1"
                        Grid.Row="1"
                        Orientation="Vertical" 
                        Margin="10,10,10,10">
              
            </StackPanel>-->
            <StackPanel Grid.Row="1"           
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Margin="0,10,0,10"
                        HorizontalAlignment="Center" Width="338">
                
                <ContentControl Content="{Binding LabelView}"/>
                <Button Height="30" 
                        Width="100" 
                        Margin="0,50,0,0" 
                        Content="Print"
                        Click="PrintButton_Click"/>
            </StackPanel>
            <!--#endregion-->
        </Grid>

    </Border>
 
</Window>
